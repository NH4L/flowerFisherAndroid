<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="cn.aysst.www.flowerfish.RegisterActivity">

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/log_in_layout"
            android:scaleType="fitXY"
            android:src="@drawable/signin"/>
    <LinearLayout
            android:id="@+id/log_in_layout"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_above="@+id/name_text">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:text="已经有账号?"
                android:textColor="#ababab"
                android:textSize="16sp"/>
        <TextView
                android:id="@+id/text_log_in"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:clickable="true"
                android:text="登录"
                android:textColor="#639abf"
                android:textSize="16sp"/>
    </LinearLayout>

    <TextView
            android:id="@+id/name_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"
            android:layout_above="@+id/edit_email"
            android:text="邮箱"
            android:textSize="16sp"
            android:textColor="#ababab"/>
    <EditText
            android:id="@+id/edit_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"
            android:singleLine="true"
            android:maxLength="30"
            android:layout_above="@+id/mail_text"
            android:theme="@style/MyEditText"/>

    <TextView
            android:id="@+id/mail_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"
            android:layout_above="@+id/edit_username"
            android:text="账户"
            android:textSize="16sp"
            android:textColor="#ababab"/>
    <EditText
            android:id="@+id/edit_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"
            android:singleLine="true"
            android:maxLength="20"
            android:layout_above="@+id/password_text"
            android:theme="@style/MyEditText"/>

    <TextView
            android:id="@+id/password_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"
            android:layout_above="@+id/edit_setpassword"
            android:text="密码"
            android:textSize="16sp"
            android:textColor="#ababab"/>
    <EditText
            android:id="@+id/edit_setpassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"
            android:singleLine="true"
            android:maxLength="16"
            android:layout_above="@+id/password_confirm_text"
            android:inputType="textPassword"
            android:theme="@style/MyEditText"/>

    <TextView
            android:id="@+id/password_confirm_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"
            android:layout_above="@+id/edit_resetpassword"
            android:text="确认密码"
            android:textSize="16sp"
            android:textColor="#ababab"/>
    <EditText
            android:id="@+id/edit_resetpassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"
            android:singleLine="true"
            android:maxLength="16"
            android:layout_above="@+id/text_confirm_register"
            android:inputType="textPassword"
            android:theme="@style/MyEditText"/>

    <TextView
            android:id="@+id/text_confirm_register"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="100dp"
            android:background="@drawable/selector_btn_bg"
            android:gravity="center"
            android:clickable="true"
            android:text="@string/sign_in"
            android:textColor="@android:color/white"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="580dp"
            android:layout_marginLeft="90dp"
            android:text="Supported by 数控小医生 Team"/>

</RelativeLayout>


